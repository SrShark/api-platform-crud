doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    //- Titulo
    title= locals.titulo
    link(rel="stylesheet", type="text/css", href="https://fonts.googleapis.com/css?family=Work+Sans")
    
    //- estilos
    .
      <style>
        @import url('');
        
        *, figure{
          box-sizing: border-box;
          margin: 0;
          padding: 0;
        }
        
        body{
          font-family: 'Work Sans', sans-serif;
          font-size: 14px;
          color: #4D4D4D;
        }
        
        a{
          text-decoration: none;
        }
        
        li {
          list-style: none;
        }
        
        .pokedex {
          display: flex;
          align-self: center;
          flex-wrap: wrap;
          justify-content: center;
          padding: 2rem 2rem;
        background-color: #F0F0F0;;
        }
        
        .pokemon {
          width: 250px;
          background-color: #FFFFFF;
          box-shadow: 0 1px 4px rgba(150, 150, 150, 0.14);
          border-radius: 3px;
          padding: 10px;
          margin: 1rem;
        }
        
        .pic {
          display: flex;
          justify-content: center;
          align-items: center;
          background-color: #F0F0F0;
          margin-bottom: 1rem;
          border-radius: 3px;
          height: 250px;
        }
        
        .name {
          margin-bottom: 1rem;
          font-weight: bold;
          font-size: 1.5rem;
        }
        
        .attr {
          background-color: #607D8B;
          color: white;
          padding: 3px 1rem;
          border-radius: 3px;
          display: inline;
          text-align: center;
          font-size: 12px;
          text-transform: uppercase;
        }
        
        .id {
          display: block;
          text-align: right;
          color: #E0E0E0;
        }
        
        .botones {
          display: flex;
          justify-content: center;
          padding: 1rem 0;
        }
        
        .ordenar {
          padding: 1rem;
          background-color: #AB47BC;
          color: white;
          cursor: pointer;
          border: none;
          border-radius: 3px;
        }
      </style>
  body
    main.pokedex
      article.pokemon(data-id="#{pokemon.id}")
        figure.pic
          img(src=pokemon.url alt="")
        h2.name #{pokemon.name}
        div
          p.attr #{pokemon.type}
        span.id NÂº #{pokemon.id}
