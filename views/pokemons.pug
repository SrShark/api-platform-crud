doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    //- Titulo
    title= locals.titulo
    link(rel="stylesheet", type="text/css", href="https://fonts.googleapis.com/css?family=Work+Sans")
    
    //- estilos
    .
      <style>
        @import url('');
        
        *, figure{
          box-sizing: border-box;
          margin: 0;
          padding: 0;
        }
        
        body{
          font-family: 'Work Sans', sans-serif;
          font-size: 14px;
          color: #607D8B;
        }
        
        a{
          text-decoration: none;
        }
        
        li {
          list-style: none;
        }
        
        @keyframes jump {
          0% {top: 0px}
          50% {top: -5px}
          100% {top: 0px}
        }
        
        .container {
          display: flex;
          justify-content: center;
          background-image: url(https://assets.pokemon.com/static2/_ui/img/chrome/container_bg.png);
          background-color: #fafafa;
        }
        
        .pokedex {
          display: flex;
          flex-wrap: wrap;
          justify-content: center;
          width: 1200px;
          padding: 2rem 2rem;
        }
        
        .pokemon {
          width: 300px;
          position: relative;
          background-color: #FFFFFF;
          box-shadow: 0 1px 4px rgba(96, 125, 139, .2);
          border-radius: 3px;
          padding: 10px;
          margin: 1rem;
        }
        
        .pokemon:hover {
          animation-name: jump;
          animation-duration: .2s;
        }
        
        .pic {
          display: flex;
          justify-content: center;
          align-items: center;
          background-color: #ECEFF1;
          margin-bottom: 1rem;
          border-radius: 3px;
          height: 250px;
          overflow: hidden;
          cursor: pointer;
        }
        
        .pic > img { width: 275px; }
        
        .name {
          margin-bottom: 1rem;
          font-weight: bold;
          font-size: 1.5rem;
        }
        
        .description {
          height: 2rem;
          margin-bottom: 1rem;
          overflow: hidden;
        }
        
        .attr {
          background-color: #607D8B;
          color: white;
          padding: 3px 1rem;
          border-radius: 3px;
          display: inline;
          text-align: center;
          font-size: 12px;
          text-transform: uppercase;
        }
        
        .id {
          display: block;
          text-align: right;
          color: #E0E0E0;
        }
      </style>
  body
    section.container
      main.pokedex
        each value in [1,2,3,4,5,6]
          article.pokemon(data-id= pokemon.id)
            figure.pic
              img(src= pokemon.url alt= pokemon.name)
            h2.name #{pokemon.name}
            p.description #{pokemon.description}
            div
              p.attr #{pokemon.type}
            span.id NÂº #{pokemon.id}
